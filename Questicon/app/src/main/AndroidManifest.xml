            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MountsActivity"
            android:label="Mounts" />
        <activity
            android:name=".PetsActivity"
            android:label="Pets" />
        <activity android:name=".BossesDetailView" />
        <activity android:name=".DunegonDetailView" />
        <activity android:name=".MountDetailView" />
        <activity android:name=".PetDetailView" />
        <activity
            android:name=".LoreActivity"
            android:label="Lore of Warcraft Playlist" />
        <activity android:name=".DetailViewLore" />
        <activity android:name=".MediaAcitvity" />
