            android:name=".BossesActivity"
            android:label="Bosses">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity android:name=".CharacterDetailView" />
        <activity
            android:name=".NavD"
            android:label="Questicon"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DungeonActivity"
